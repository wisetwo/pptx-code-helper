<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="PptxCodeHelperInitialize">
   <ribbon>
      <tabs>
         <tab id="PptxCodeHelperToolbar" label="PptxCodeHelper">
            <group id="FormattingGroup" label="Shapes" imageMso="ShapesMoreShapes">
               <control idMso="ShapeWidth" showLabel="false" />
               <control idMso="ShapeHeight" showLabel="false" />
               <control idMso="ObjectSizeAndPositionDialog" showLabel="false" />
            </group>
            <group id="GenerateCodeGroup" label="GenerateCode" imageMso="RightArrow2">
               <button id="CopyShapeAttribute" label="Copy shape atribute to clipboard" imageMso="GroupClipboard" onAction="CopyShapeAttributeToClipboard" />
               <button id="CopyFontAttribute" label="Copy font attribute to clipboard" imageMso="GroupClipboard" onAction="CopyFontAttributeToClipboard" />
            </group>
         </tab>
      </tabs>
   </ribbon>
</customUI>